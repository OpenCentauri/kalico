# Kconfig settings for compiling and running the firmware on Allwinner 
# T113/R528 Hifi4 DSP platform

if MACH_SUNXI

config SUNXI_SELECT
    bool
    default y
    select HAVE_GPIO
    select HAVE_GPIO_ADC
    select HAVE_GPIO_SPI
    select HAVE_GPIO_HARD_PWM

config BOARD_DIRECTORY
    string
    default "sunxi"

config SERIAL
    default y

config CLOCK_FREQ
    int
    default 600000000

endif
